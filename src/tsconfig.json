{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["Resources/*"]
        },
        "types": [
            "unplugin-icons/types/vue",
            "bootstrap-vue-next"
        ]
    },
    "include": [
        "Resources/**/*.ts",
        "Resources/**/*.vue",
        "Resources/**/*.d.ts",
        "components.d.ts",
        "global.d.ts",
        "vite-env.d.ts",
        "lodash-debounce.d.ts"
    ],
    "exclude": ["node_modules"]
}

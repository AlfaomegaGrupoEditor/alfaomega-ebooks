{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["Resources/*"]
        },
        "types": ["unplugin-icons/types/vue"]
    },
    "include": ["Resources/**/*.ts", "Resources/**/*.vue", "Resources/**/*.d.ts", "components.d.ts", "modules.d.ts"],
    "exclude": ["node_modules"]
}
